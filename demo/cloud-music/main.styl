$hetme_color = #d44439
$underline_color = #f1f1f1

.top
    display flex
    flex-direction: row
    justify-content: space-between
    padding 5px 10px
    background $hetme_color
    span
        line-height: 40px
        color $underline_color
        font-size 20px
        &.iconfont
            font-size 25px
.tabbar
    height 44px    // 44px 是手指按下去最舒适的大小
    display flex
    flex-direction: row
    justify-content: space-around
    background: $hetme_color
    a
        flex 1
        text-decoration: none
        padding 2px 0
        font-size: 14px
        color #e4e4e4
        .item
            height 100%
            display flex
            flex-direction: row
            justify-content: center
            align-items: center
        &.selected
            span
                padding 3px 0
                font-weight 700
                color $underline_color
                border-bottom 2px solid $underline_color